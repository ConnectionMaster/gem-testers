!!! XML
!!! Strict
%html
  %head
    %title
      Gem Testers
    = stylesheet_link_tag 'jquery-ui-1.8.6.custom'
    = yield :stylesheets
    = stylesheet_link_tag 'screen'
    = javascript_include_tag 'https://ajax.googleapis.com/ajax/libs/jquery/1.4.3/jquery.min.js'
    = javascript_include_tag 'https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.6/jquery-ui.min.js'
    = javascript_include_tag 'application'
    = yield :javascripts
    = yield :feeds
    = csrf_meta_tag
  %body
    #topnav
      %a{:href => root_path} Gem Testers
      %div Tests run everywhere, collected here. 
    #wrapper
      .info
        .flash=flash[:notice]
        = yield
